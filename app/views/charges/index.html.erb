<p id="notice"><%= notice %></p>

<h1>Charges</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Chargeable</th>
      <th>Chargeable type</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Currency</th>
      <th>Stripe charge</th>
      <th>Card last 4</th>
      <th>Card exp month</th>
      <th>Card exp year</th>
      <th>Card type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
      <tr>
        <td><%= charge.user_id %></td>
        <td><%= charge.chargeable_id %></td>
        <td><%= charge.chargeable_type %></td>
        <td><%= charge.description %></td>
        <td><%= charge.amount %></td>
        <td><%= charge.currency %></td>
        <td><%= charge.stripe_charge_id %></td>
        <td><%= charge.card_last_4 %></td>
        <td><%= charge.card_exp_month %></td>
        <td><%= charge.card_exp_year %></td>
        <td><%= charge.card_type %></td>
        <td><%= link_to 'Show', charge %></td>
        <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
        <td><%= link_to 'Destroy', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


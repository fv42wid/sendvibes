<div class="row comment">
  <div class="col-sm-2">
    <%= image_tag '/1.jpg', :class => "avatar img-responsive" %>
  </div>
  <div class="col-sm-10">
    <div class="message clearfix">
      <header>
	<span class="name">
	  <%= comment.user.first_name %> <%= comment.user.last_name %>
	</span>
	<span class="date pull-right">
	  <%= time_ago_in_words(comment.created_at) %>
	</span>
      </header>
      <div class="note">
	<p><%= comment.body %></p>
      </div>
    </div>
  </div>
</div>
